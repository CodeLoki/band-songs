<EuiCard
    @title={{this.data.title}}
    @description={{this.data.artist}}
    ...attributes
>
    <:body>
        {{#if this.notes}}
            <EuiPanel @paddingSize="m" @hasShadow={{false}}>
                <EuiBadgeGroup @gutterSize="xs" as |Group|>
                    {{#each this.notes as |note|}}
                        <Group.item>
                            <EuiBadge @iconType={{note.icon}} @color="primary">
                                {{note.text}}
                            </EuiBadge>
                        </Group.item>
                    {{/each}}
                </EuiBadgeGroup>
            </EuiPanel>
        {{/if}}
    </:body>

    <:footer>
        {{#if this.showIndicators}}
            <EuiFlexGroup @justifyContent="spaceBetween" @alignItems="center">
                <EuiFlexItem @grow={{false}}>
                    {{#if this.data.groove}}
                        <EuiButtonIcon
                            @iconType="packetbeatApp"
                            @size="m"
                            @color="text"
                            @href={{this.data.groove}}
                            aria-label="GrooveScribe Tab"
                        />
                    {{/if}}
                </EuiFlexItem>
                <EuiFlexItem @grow={{false}}>
                    {{#if this.data.drumeo}}
                        <EuiButtonIcon
                            @iconType="metricbeatApp"
                            @size="m"
                            @color={{if this.isDrumeo "primary" "text"}}
                            @href={{this.data.drumeo}}
                            aria-label="Generic Tab"
                        />
                    {{/if}}
                </EuiFlexItem>
                {{#if (can-user-edit)}}
                    <EuiFlexItem @grow={{false}}>
                        <EuiButtonIcon
                            @iconType="documentEdit"
                            @size="m"
                            @color="text"
                            aria-label="Edit"
                            {{on "click" this.edit}}
                        />
                    </EuiFlexItem>
                {{/if}}
                <EuiFlexItem @grow={{false}}>
                    {{#if this.lyricsLink}}
                        <EuiButtonIcon
                            @iconType="discuss"
                            @size="m"
                            @color="text"
                            @href={{this.lyricsLink}}
                            aria-label="Lyrics"
                        />
                    {{/if}}
                </EuiFlexItem>
            </EuiFlexGroup>
        {{/if}}

    </:footer>
</EuiCard>